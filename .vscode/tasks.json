{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "runBothTasks",
			"dependsOn": [
				"runcargo",
				"getpid"
			],
			"dependsOrder": "sequence"
		},
		{
			"label": "runcargo",
			"type": "shell",
			"isBackground": true,
			"command": "cargo run --example example;echo Finished",
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^(.*)$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*Running.*$",
					"endsPattern": "^.*Finished.*$"
				}
			}
		},
		{
			"label": "getpid",
			"type": "shell",
			"command": "export EXAMPLEPID=$(pgrep -f example)",
		},
		{
			"label": "stopCargo",
			"type": "shell",
			"command": "kill -9 $(pgrep -f example)",
		},
	]
}